<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="loading_base_bg">#ffeeeeee</color>
    <color name="loading_base_msg_color">#ff999999</color>
    <color name="cpb_default_color">#33b5e5</color>

    <dimen name="cpb_default_stroke_width">4dp</dimen>
    <dimen name="common_loading_progress_size">35dp</dimen>
    <dimen name="common_loading_text_margin">10dp</dimen>
    <dimen name="common_loading_text_lines_spacing">5dp</dimen>

    <integer name="cpb_default_min_sweep_angle">20</integer>
    <integer name="cpb_default_max_sweep_angle">300</integer>

    <string name="cpb_default_rotation_speed">1</string>
    <string name="cpb_default_sweep_speed">1</string>
    <string name="common_loading_tips">正在加载中…</string>

    <color name="gplus_color_1">#3e802f</color>
    <color name="gplus_color_2">#f4b400</color>
    <color name="gplus_color_3">#427fed</color>
    <color name="gplus_color_4">#b23424</color>

    <integer-array name="gplus_colors">
        <item>@color/gplus_color_1</item>
        <item>@color/gplus_color_2</item>
        <item>@color/gplus_color_3</item>
        <item>@color/gplus_color_4</item>
    </integer-array>

    <!-- CircularProgressBar -->
    <declare-styleable name="CircularProgressBar">
        <attr name="cpbStyle" format="reference" />
        <attr name="cpb_color" format="color" />
        <attr name="cpb_colors" format="reference" />
        <attr name="cpb_stroke_width" format="dimension" />
        <attr name="cpb_min_sweep_angle" format="integer" />
        <attr name="cpb_max_sweep_angle" format="integer" />
        <attr name="cpb_sweep_speed" format="float" />
        <attr name="cpb_rotation_speed" format="float" />
    </declare-styleable>
</resources>