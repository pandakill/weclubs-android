<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners
                android:radius="4dp"/>
            <solid android:color="@color/themeColor" />
        </shape>
    </item>

    <item
        android:state_enabled="true" >
        <shape>
            <corners
                android:radius="4dp"/>
            <solid android:color="@color/themeColor" />
        </shape>
    </item>

    <item
        android:state_selected="false">
        <shape>
            <corners
                android:radius="4dp"/>
            <solid android:color="@color/themeColor" />
        </shape>
    </item>

    <item
        android:state_selected="true">
        <shape>
            <corners
                android:radius="4dp"/>
            <solid android:color="@color/themeColor.Dark" />
        </shape>
    </item>

    <item
        android:state_enabled="false" >
        <shape>
            <corners
                android:radius="4dp"/>
            <solid android:color="@color/themeColor.Disable" />
        </shape>
    </item>
</selector>