<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_dynamic"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    style="@style/CommonLayout.WhiteBg"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_club_logo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/login_logo_weclubs"
            android:background="@drawable/bg_my_dynamic_club_logo"
            android:foreground="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/tv_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@id/img_club_logo"
            android:textColor="@color/colorCommonText"
            android:textSize="16sp"
            android:text="佐佐营销协会"/>

        <TextView
            android:id="@+id/tv_club_member_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_club_logo"
            android:layout_below="@+id/tv_club_name"
            android:drawableLeft="@mipmap/ic_number"
            android:drawablePadding="4dp"
            android:textSize="11sp"
            android:textColor="#c3c3c3"
            android:text="48 "/>

        <TextView
            android:id="@+id/tv_club_tag"
            android:layout_width="56dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:background="@drawable/club_level_tag_school"
            android:textSize="10sp"
            android:gravity="center"
            android:text="院级组织"/>

        <TextView
            android:id="@+id/btn_group_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_club_tag"
            android:drawableLeft="@mipmap/ic_groupchat"
            android:drawablePadding="2dp"
            android:paddingTop="12dp"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="12dp"
            android:textColor="@color/themeColor"
            android:textSize="14sp"
            android:text="群聊"/>

        <View
            android:id="@+id/line"
            android:layout_alignTop="@+id/ll_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorLine"/>
        
        <LinearLayout
            android:id="@+id/ll_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_todo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="待办：0"
                android:foreground="?android:attr/selectableItemBackground"/>

            <View
                android:layout_width="1px"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@color/colorLine"/>

            <TextView
                android:id="@+id/btn_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="活动：0"
                android:foreground="?android:attr/selectableItemBackground"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>