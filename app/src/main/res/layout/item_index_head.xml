<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:drawableStart="@mipmap/home_ic_hot"
        android:drawablePadding="4dp"
        android:text="@string/hot_clubs" />

    <LinearLayout
        android:id="@+id/ll_hot_clubs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_item_hot_clubs1"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.mm.weclubs.widget.RoundImageView
                android:id="@+id/img_club_logo1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/weclubs_logo" />

            <TextView
                android:id="@+id/tv_club_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxEms="4"
                android:singleLine="true"
                tools:text="星光大学校学生会" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_hot_clubs2"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.mm.weclubs.widget.RoundImageView
                android:id="@+id/img_club_logo2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/weclubs_logo" />

            <TextView
                android:id="@+id/tv_club_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxEms="4"
                android:singleLine="true"
                tools:text="星光大学校学生会" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_hot_clubs3"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.mm.weclubs.widget.RoundImageView
                android:id="@+id/img_club_logo3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/weclubs_logo" />

            <TextView
                android:id="@+id/tv_club_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxEms="4"
                android:singleLine="true"
                tools:text="星光大学校学生会" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_hot_clubs4"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.mm.weclubs.widget.RoundImageView
                android:id="@+id/img_club_logo4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/weclubs_logo" />

            <TextView
                android:id="@+id/tv_club_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxEms="4"
                android:singleLine="true"
                tools:text="星光大学校学生会" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_hot_clubs5"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.mm.weclubs.widget.RoundImageView
                android:id="@+id/img_club_logo5"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/weclubs_logo" />

            <TextView
                android:id="@+id/tv_club_name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxEms="4"
                android:singleLine="true"
                tools:text="星光大学校学生会" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>