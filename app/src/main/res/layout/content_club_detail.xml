<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             style="@style/CommonLayout">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@mipmap/image_plofile"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/img_pro_file"
                app:layout_constraintHorizontal_bias="0.0"/>

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:srcCompat="@mipmap/weclubs_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/avatar_top"
                tools:layout_marginTop="96dp"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintLeft_creator="1"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="计算机协会"
                android:textColor="@color/colorCommonText"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_avatar"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintLeft_creator="1"/>

            <TextView
                android:id="@+id/tv_slogan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                tools:text="与进俱进，中华人民共和国中华人共和国中华人民共和国23中华人民共和国"
                android:textAlignment="center"
                android:textColor="@color/colorCommonText"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                android:layout_marginLeft="60dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginRight="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"/>

            <ImageView
                android:id="@+id/img_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="18dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/nav_item_ic_qrcode"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"/>

            <ImageView
                android:id="@+id/img_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/icon_return_white"
                tools:layout_constraintTop_creator="1"/>

            <LinearLayout
                android:id="@+id/ll_student_list"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_slogan"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp">
            </LinearLayout>


            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline"
                app:layout_constraintGuide_begin="260dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="285dp"
                tools:layout_editor_absoluteX="0dp"/>


            <View
                android:id="@+id/view_line_1"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorLine"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_student_list"/>

            <TextView
                android:id="@+id/tv_club_attr"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="12dp"
                android:text="@string/club_attr"
                android:gravity="center_vertical"
                android:textColor="@color/colorCommonText"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_line_1"
                android:layout_marginStart="12dp"/>

            <View
                android:id="@+id/view_line_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_club_attr"/>

            <TextView
                android:id="@+id/tv_club_attr_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorCommonText"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/view_line_2"
                tools:text="这是是什"
                app:layout_constraintRight_toLeftOf="@+id/guideline3"/>

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2"
                app:layout_constraintGuide_begin="24dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="25dp"
                tools:layout_editor_absoluteX="24dp"/>

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline3"
                app:layout_constraintGuide_end="24dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="25dp"
                tools:layout_editor_absoluteX="336dp"/>

            <View
                android:id="@+id/view_line_3"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorLine"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_club_attr_content"/>

            <TextView
                android:id="@+id/tv_club_honor_title"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="12dp"
                android:text="@string/club_honor"
                android:gravity="center_vertical"
                android:textColor="@color/colorCommonText"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_line_3"
                android:layout_marginStart="12dp"/>

            <View
                android:id="@+id/view_line_4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_club_honor_title"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/view_line_4"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="0dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    tools:text="我有好多荣誉啊"
                    android:textColor="@color/colorCommonText"
                    android:textSize="12sp"
                    android:drawableLeft="@mipmap/ic_honor"
                    android:drawablePadding="8dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <FrameLayout
            android:id="@+id/fl_apply_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_button">
            <TextView
                android:id="@+id/tv_apply_join"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/btn_ic_addmember"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/apply_join"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tips"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>

