<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CommonLayout">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@android:color/white"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/image_plofile"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_pro_file"
            app:layout_constraintHorizontal_bias="0.0"/>

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="76dp"
            android:layout_height="76dp"
            app:srcCompat="@mipmap/weclubs_logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/avatar_top"
            tools:layout_marginTop="96dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="欧阳娜娜"
            android:textColor="@color/colorCommonText"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_avatar"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"/>

        <TextView
            android:id="@+id/tv_slogan"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_name"
            android:drawableLeft="@mipmap/ic_plofile_female"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="12级软件工程"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"/>

        <ImageView
            android:id="@+id/img_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/nav_item_ic_qrcode"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>



        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="260dp"
            android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/img_mine_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@mipmap/mine_ic_information"/>

        <TextView
            android:id="@+id/tv_mine_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="@string/mine_info"
            android:textColor="@color/colorCommonText"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_mine_info"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/img_mine_info"
            app:layout_constraintRight_toLeftOf="@+id/img_mine_info_next"
            app:layout_constraintTop_toTopOf="@+id/img_mine_info"
            app:layout_constraintVertical_bias="0.0"
            tools:text="我的资料"/>

        <ImageView
            android:id="@+id/img_mine_info_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mine_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mine_info"
            app:srcCompat="@mipmap/ic_next"/>

        <View
            android:id="@+id/view_line_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mine_info"/>

        <ImageView
            android:id="@+id/img_mine_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_line_1"
            app:srcCompat="@mipmap/mine_ic_certification"/>
        <TextView
            android:id="@+id/tv_mine_certification"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="@string/mine_auth"
            android:textColor="@color/colorCommonText"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_mine_certification"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/img_mine_certification"
            app:layout_constraintRight_toLeftOf="@+id/img_mine_certification_next"
            app:layout_constraintTop_toTopOf="@+id/img_mine_certification"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/img_mine_certification_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            tools:text="未认证"
            app:layout_constraintTop_toTopOf="@+id/img_mine_certification_next"
            app:layout_constraintRight_toLeftOf="@+id/img_mine_certification_next"
            app:layout_constraintBottom_toBottomOf="@+id/img_mine_certification_next"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"/>

        <ImageView
            android:id="@+id/img_mine_certification_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mine_certification"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mine_certification"
            app:srcCompat="@mipmap/ic_next"/>

        <View
            android:id="@+id/view_line_2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mine_certification"/>

        <ImageView
            android:id="@+id/img_mine_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_line_2"
            app:srcCompat="@mipmap/mine_ic_news"/>
        <TextView
            android:id="@+id/tv_mine_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="@string/mine_msg"
            android:textColor="@color/colorCommonText"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_mine_news"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/img_mine_news"
            app:layout_constraintRight_toLeftOf="@+id/img_mine_news_next"
            app:layout_constraintTop_toTopOf="@+id/img_mine_news"
            app:layout_constraintVertical_bias="0.0"/>

        <ImageView
            android:id="@+id/img_mine_news_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mine_news"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mine_news"
            app:srcCompat="@mipmap/ic_next"/>

        <View
            android:id="@+id/view_line_3"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mine_news"/>

        <ImageView
            android:id="@+id/img_mine_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@mipmap/mine_ic_setup"
            app:layout_constraintTop_toBottomOf="@+id/view_line_3"/>
        <TextView
            android:id="@+id/tv_mine_setup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="@string/mine_setup"
            android:textColor="@color/colorCommonText"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_mine_setup"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/img_mine_setup"
            app:layout_constraintRight_toLeftOf="@+id/img_mine_setup_next"
            app:layout_constraintTop_toTopOf="@+id/img_mine_setup"
            app:layout_constraintVertical_bias="0.0"/>

        <ImageView
            android:id="@+id/img_mine_setup_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mine_setup"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mine_setup"
            app:srcCompat="@mipmap/ic_next"/>

        <View
            android:id="@+id/view_line_4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mine_setup"/>

        <ImageView
            android:id="@+id/img_mine_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@mipmap/mine_ic_opinion"
            app:layout_constraintTop_toBottomOf="@+id/view_line_4"/>
        <TextView
            android:id="@+id/tv_mine_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="@string/mine_feedback"
            android:textColor="@color/colorCommonText"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_mine_feedback"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/img_mine_feedback"
            app:layout_constraintRight_toLeftOf="@+id/img_mine_feedback_next"
            app:layout_constraintTop_toTopOf="@+id/img_mine_feedback"
            app:layout_constraintVertical_bias="0.0"/>

        <ImageView
            android:id="@+id/img_mine_feedback_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mine_feedback"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mine_feedback"
            app:srcCompat="@mipmap/ic_next"/>

        <View
            android:id="@+id/view_line_5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mine_feedback"/>

        <ImageView
            android:id="@+id/img_mine_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@mipmap/mine_ic_aboutus"
            app:layout_constraintTop_toBottomOf="@+id/view_line_5"/>
        <TextView
            android:id="@+id/tv_mine_about_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="@string/mine_about_us"
            android:textColor="@color/colorCommonText"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_mine_about_us"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/img_mine_about_us"
            app:layout_constraintRight_toLeftOf="@+id/img_mine_about_us_next"
            app:layout_constraintTop_toTopOf="@+id/img_mine_about_us"
            app:layout_constraintVertical_bias="0.0"/>

        <ImageView
            android:id="@+id/img_mine_about_us_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mine_about_us"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mine_about_us"
            app:srcCompat="@mipmap/ic_next"/>

        <View
            android:id="@+id/view_line_6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mine_about_us"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/view_line_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line_6"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
