<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_dynamic"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="118dp"
    style="@style/CommonLayout.WhiteBg"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_sponsor_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/login_logo_weclubs"
            android:background="@drawable/bg_my_dynamic_club_logo"/>

        <TextView
            android:id="@+id/tv_sponsor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="@color/colorCommonText.666"
            android:layout_toRightOf="@+id/img_sponsor_logo"
            android:text="林佐佐"/>

        <TextView
            android:id="@+id/tv_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_sponsor_name"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:textColor="@color/colorCommonText.Tips"
            android:text="2月11日"/>

        <TextView
            android:id="@+id/tv_notify_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="28dp"
            android:textSize="16sp"
            android:textColor="@color/colorCommonText"
            android:layout_below="@+id/tv_sponsor_name"
            android:layout_toRightOf="@id/img_sponsor_logo"
            android:maxLines="3"
            android:text="机构通讯录已做好"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_below="@id/tv_notify_content"
            android:background="@color/colorLine"/>

        <LinearLayout
            android:id="@+id/btn_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_below="@id/line"
            android:orientation="horizontal"
            android:gravity="center"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@mipmap/ic_confirm"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_btn_receive_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/themeColor"
                android:text="确认收到"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>