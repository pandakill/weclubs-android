<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <com.mm.weclubs.widget.RoundImageView
        android:id="@+id/img_sponsor_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/login_logo_weclubs"/>

    <TextView
        android:id="@+id/tv_sponsor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/colorCommonText.666"
        android:maxLines="1"
        android:layout_toRightOf="@id/img_sponsor_logo"
        android:layout_marginTop="16dp"
        android:text="帅小伙儿"/>

    <TextView
        android:id="@+id/tv_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:textSize="11sp"
        android:textColor="@color/colorCommonText.Tips"
        android:text="3-26 18:00"/>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/colorCommonText"
        android:layout_below="@id/tv_sponsor_name"
        android:layout_toRightOf="@id/img_sponsor_logo"
        android:layout_marginRight="14dp"
        android:layout_marginTop="4dp"
        android:text="评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容"/>

</RelativeLayout>