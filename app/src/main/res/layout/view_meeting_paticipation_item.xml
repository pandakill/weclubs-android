<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_meeting_participation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">
    
    <com.mm.weclubs.widget.RoundImageView
        android:id="@+id/img_student_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/login_logo_weclubs"/>

    <TextView
        android:id="@+id/tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorCommonText"
        android:layout_toRightOf="@+id/img_student_logo"
        android:layout_marginTop="10dp"
        android:text="微社"/>

    <TextView
        android:id="@+id/tv_student_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_student_name"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:textSize="12sp"
        android:textColor="@color/colorCommonText.Tips"
        android:text="技术部  干事"/>

    <TextView
        android:id="@+id/tv_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/colorCommonText.Tips"
        android:layout_below="@+id/tv_student_name"
        android:layout_toRightOf="@id/img_student_logo"
        android:layout_marginTop="4dp"
        android:text="3月3日  11:28"/>

    <TextView
        android:id="@+id/tv_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_create_date"
        android:layout_toRightOf="@+id/img_student_logo"
        android:layout_marginTop="4dp"
        android:layout_marginRight="28dp"
        android:textSize="13sp"
        android:textColor="@color/colorCommonText.Tips"
        android:text=""/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/img_student_logo"
        android:layout_below="@id/tv_mark"
        android:background="@color/colorLine"/>

    <TextView
        android:id="@+id/tv_sign_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        android:textColor="@color/colorCommonText.c3c3c3"
        android:drawablePadding="4dp"
        android:drawableLeft="@mipmap/sign_ic_uncertain"
        android:text="签到"/>

    <TextView
        android:id="@+id/tv_confirm_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/tv_sign_status"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        android:textColor="@color/colorCommonText.c3c3c3"
        android:drawablePadding="4dp"
        android:drawableLeft="@mipmap/sign_ic_uncertain"
        android:text="确认"/>

</RelativeLayout>